doctype html
html
    head
        title Product Store
        style.
            .available {
                color: green;
            }
            .unavailable {
                color: red;
            }
    body
        h1 Product List

        ul
            each product in products
                if product.inStock
                    li.available= product.name + ' — In stock'
                else
                    li.unavailable= product.name + ' — Out of stock'